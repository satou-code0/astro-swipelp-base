---
// レイアウトコンポーネントのプロパティ定義
interface Props {
	title: string;
	description?: string;
}

// プロパティの取得
const { title, description = "スワイプ型ランディングページ" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<title>{title}</title>
		<!-- グローバルCSSの読み込み -->
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body class="min-h-screen bg-white">
		<!-- スロットを使用して子コンポーネントの内容を表示 -->
		<slot />
	</body>
</html>

<style is:global>
	/* スムーズスクロールの設定 */
	html {
		scroll-behavior: smooth;
	}

	/* スクロールバーのカスタマイズ */
	::-webkit-scrollbar {
		width: 8px;
	}

	::-webkit-scrollbar-track {
		background: #f1f1f1;
	}

	::-webkit-scrollbar-thumb {
		background: #888;
		border-radius: 4px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: #555;
	}
</style>
